<article>
<div class="advice advice_com-1">
    <div class="advice_wrapper">
      <div class="advice_container">
          <div class="advice_profile">
			<img class="advice_avatar" src="{avatar}" alt="{author}">
            <div class="advice_profile-info">
              <div class="advice_name"><span itemprop="reviewer">{author}</span></div>
              <div class="advice_date">{date}</div>
            </div>
          </div>
          <div class="advice_message">
            <div class="advice_desc"><span itemprop="description">{message}</span></div>
          </div>
		  <div class="advice_moder">#{comnum}[moderate] | {ip} | {edit} | {del}[/moderate]</div>
        </div>
	</div>
	</div>
</article>